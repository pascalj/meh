<div class="row center content">
  <div class="large-12 columns">
    <h2><%= t('.title') %></h2>

    <% unless streamripper_installed? %>
      <div class="alert-box alert">Streamripper doesn't seem to be in PATH. Install streamripper to record episodes.</div>
    <% end %>

    <% if @podcasts.count == 0 %>
      <p><%= t('.none') %></p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Stream
            </th>
            <th>
              Record at
            </th>
          </tr>
        </thead>
        <% @podcasts.each do |podcast| %>
          <tr>
            <td>
              <%= link_to(podcast.name, podcast_path(podcast)) %>
            </td>
            <td>
              <%= podcast.stream.name %>
            </td>
            <td>
              <%= Date::DAYNAMES[podcast.day_of_week] %> <%= podcast.start_at.strftime('%H:%M') %> for <%= podcast.length %> minutes
            </td>
          </tr>
        <% end %>
      </table>
    <% end %>
    <%= link_to('New Stream', new_stream_path, class: 'button') %>
    <%= link_to('New Podcast', new_podcast_path, class: 'button') if Stream.all.count > 0 %>
  </div>
</div>
