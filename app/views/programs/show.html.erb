<div class="row center program">
  <div class="large-12">
    <h2><%= @program.name %> <small><%= @program.stream.name %></small></h2>
    <dl>
      <dt>Day of week</dt><dd><%= @program.day_of_week.inspect %></dd>
      <dt>Start</dt><dd><%= @program.start_at.inspect %></dd>
      <dt>Duration</dt><dd><%= @program.length %> minutes</dd>
    </dl>

    <%= link_to('Delete', program_path(@program), method: :delete, class: 'button') %>
    <h3>Episodes</h3>
  </div>
</div>